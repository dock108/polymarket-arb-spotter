# Polymarket Arbitrage Spotter - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==================== Arbitrage Detection Parameters ====================
# Minimum profit percentage to consider an opportunity (default: 1.0)
MIN_PROFIT_PERCENT=1.0

# Fee buffer percentage to account for transaction fees (default: 0.5)
FEE_BUFFER_PERCENT=0.5

# Maximum stake per arbitrage opportunity in USD (default: 1000.0)
MAX_STAKE=1000.0

# ==================== Alert Configuration ====================
# Alert method: "email" or "telegram" (leave empty to disable alerts)
ALERT_METHOD=

# Telegram bot API key (required if ALERT_METHOD=telegram)
TELEGRAM_API_KEY=

# Telegram chat ID (required if ALERT_METHOD=telegram)
# To get your chat ID, send a message to your bot and visit:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=

# Email SMTP server (required if ALERT_METHOD=email)
# Example: smtp.gmail.com
EMAIL_SMTP_SERVER=

# Email SMTP port (default: 587 for TLS)
EMAIL_SMTP_PORT=587

# Email username for authentication (required if ALERT_METHOD=email)
EMAIL_USERNAME=

# Email password for authentication (required if ALERT_METHOD=email)
EMAIL_PASSWORD=

# Email sender address (required if ALERT_METHOD=email)
EMAIL_FROM=

# Email recipient address (required if ALERT_METHOD=email)
EMAIL_TO=

# Notification throttle in seconds (default: 300 = 5 minutes)
# Prevents spam by limiting notifications for the same market
NOTIFICATION_THROTTLE_SECONDS=300

# ==================== Database Configuration ====================
# Path to the arbitrage logs database (default: data/arb_logs.sqlite)
LOG_DB_PATH=data/arb_logs.sqlite

# Path to the main application database (default: data/polymarket_arb.db)
DB_PATH=data/polymarket_arb.db

# ==================== API Configuration ====================
# Polymarket API endpoint (default: https://api.polymarket.com)
API_ENDPOINT=https://api.polymarket.com

# Polymarket API key (optional, if required by API)
API_KEY=

# ==================== Logging Configuration ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Path to log file (default: data/polymarket_arb.log)
LOG_FILE=data/polymarket_arb.log

# ==================== History Recording Configuration ====================
# Enable history recording of market data (default: false)
ENABLE_HISTORY=false

# History sampling interval in milliseconds (default: 1500)
# Prevents over-recording by enforcing a minimum interval between recordings
HISTORY_SAMPLING_MS=1500
